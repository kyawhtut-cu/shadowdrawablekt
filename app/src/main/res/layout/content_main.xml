<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/tv_test_one"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Hello World!"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary" />

    <com.kyawhtut.shadowdrawablekt.view.CircleShadowConstraint
        android:id="@+id/circle_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/actionBarItemBackground"
        android:longClickable="true"
        app:backgroundColor="@color/colorCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_test_one"
        app:radius="8dp"
        app:shadowColor="@color/colorCircleShadow"
        app:shadowRadius="8dp">

        <TextView
            android:id="@+id/tv_test_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.kyawhtut.shadowdrawablekt.view.CircleShadowConstraint>

    <com.kyawhtut.shadowdrawablekt.view.RoundedShadowConstraint
        android:id="@+id/rounded_view"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:longClickable="true"
        app:backgroundColor="@color/colorCircle"
        app:layout_constraintEnd_toStartOf="@+id/rounded_view_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_view"
        app:radius="8dp"
        app:shadowColor="@color/colorCircleShadow"
        app:shadowRadius="8dp">

        <TextView
            android:id="@+id/tv_test_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.kyawhtut.shadowdrawablekt.view.RoundedShadowConstraint>

    <com.kyawhtut.shadowdrawablekt.view.RoundedShadowConstraint
        android:id="@+id/rounded_view_one"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:backgroundColor="@color/colorCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rounded_view"
        app:layout_constraintTop_toBottomOf="@+id/circle_view"
        app:radius="8dp"
        app:shadowColor="@color/colorCircleShadow"
        app:shadowRadius="8dp">

        <TextView
            android:id="@+id/tv_test_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.kyawhtut.shadowdrawablekt.view.RoundedShadowConstraint>
</androidx.constraintlayout.widget.ConstraintLayout>
